<p id="notice"><%= notice %></p>

<div class= "container">
  <h2>Listing Users</h2>
  <p><b>Name</b><p>
      <% @users.each do |user| %>
        <div class="row">
            <div class="col-md-3"><%= user.name %></div>
            <div class="col-md-2"><%= link_to 'Show', user %></div>
            <div class="col-md-2"><%= link_to 'Edit', edit_user_path(user) %></div>
            <div class="col-md-2"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></div>
        </div>
      <% end %>

      <div class="row">
        <div class="row top-buffer-small"></div>
        <div class="col-md-3"><%= link_to 'New User', new_user_path %></div>
      </div>

</div>
