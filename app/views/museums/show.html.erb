<p id="notice"><%= notice %></p>
<%= javascript_include_tag "application" %>
<div id="main-container" class="container">
  <div class="row">
    <h1 class="title"><%= @museum.name %></h1>
    <br />
  </div>
  <div class="row museum-info">
    <div class="col-xs-4">
      <div class="picture-frame">
        PICTURE OF MUSEUM
      </div>
    </div>
    <div class="col-xs-8">
      <p><%= @museum.description %></p>
      <p><%= @museum.street_address %></p>
      <p><%= link_to "Official Website!", @museum.website %></p>
    </div>
  </div>
  <div class="row">
    <hr />
    <% @exhibitions.each do |exhibition| %>
      <div class="col-lg-4 col-md-6 col-sm-6">
        <%= link_to museum_exhibition_path(@museum, exhibition), :class => "button-link" do %>
          <div class="exhibition btn btn-primary btn-block grid-button">
            <div class="center-block-outer">
              <div class="center-block-middle">
                <div class="center-block-inner">
                  <h4 class="button-link-name"><%=exhibition.name %></h4>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="row">
    <link href="../../dist/vis.css" rel="stylesheet" type="text/css" />
    <div id="visualization"></div>
  </div>
  <div class="row">
    <div class="col-xs-12" id="exhibition-container">

    </div>
  </div>
</div>

<script type="text/javascript">
 // DOM element where the Timeline will be attached
 var container = document.getElementById('visualization');
 // Create a DataSet (allows two way data-binding)
 var items = new vis.DataSet(gon.dataset);
 // Configuration for the Timeline
 var options = {};

 // Create a Timeline
 var timeline = new vis.Timeline(container, items, options);
 timeline.on('select', function(){
   var d = new Date();
   var t = d.toLocaleTimeString();
   document.getElementById("exhibition-container").innerHTML = t;
 });
</script>
