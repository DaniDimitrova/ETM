<p id="notice"><%= notice %></p>
<%= javascript_include_tag "application" %>
<div id="main-container" class="container">
  <div class="row">
    <h1 class="title"><%= @museum.name %></h1>
    <br />
  </div>
  <div class="row museum-info">
    <div class="col-xs-4">
      <div class="picture-frame">
        <%= image_tag attachment_url(@museum, :image, :fill, 300, 300, format: "png"), :class => "image side-image horizontal-center" %>
      </div>
    </div>
    <div class="col-xs-8">
      <p><%= @museum.description %></p>
      <p><%= @museum.street_address %></p>
      <p><%= link_to "Official Website!", @museum.website %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <hr />
    </div>
  </div>

  <div class="row">
    <link href="../../dist/vis.css" rel="stylesheet" type="text/css" />
    <div id="visualization"></div>
  </div>
  <div class="row">
    <div class="col-xs-12 white" id="exhibition-container">
      <p>Click on an exhibition in the timeline above to see details and visit it</p>
    </div>
  </div>
</div>

<script type="text/javascript">
 // DOM element where the Timeline will be attached
 var container = document.getElementById('visualization');
 // Create a DataSet (allows two way data-binding)
 var items = new vis.DataSet(gon.dataset);
 // Configuration for the Timeline
 var options = {};

 // Create a Timeline
 var timeline = new vis.Timeline(container, items, options);
 timeline.on('select', function(properties){
   $.ajax({url: window.location.href + "/exhibitions/" + properties.items}).done(function(html) {});

});
</script>
<style>
.vis-item {
  -webkit-touch-callout: none; /* iOS Safari */
  -webkit-user-select: none;   /* Chrome/Safari/Opera */
  -khtml-user-select: none;    /* Konqueror */
  -moz-user-select: none;      /* Firefox */
  -ms-user-select: none;       /* IE/Edge */
  user-select: none;           /* non-prefixed version, currently
                                  not supported by any browser */
}
.vis-item:hover {
  cursor: pointer;
}

.vis.timeline .item.range .content {
    text-overflow: ellipsis;
}
</style>
