<div class="col-xs-12 responsive-color-background" id="slidebox-container">
  <h2><%= exhibition.name %></h2>
  <p><%= exhibition.description %></p>
  <%= link_to museum_exhibition_path(exhibition.museum, exhibition), :class => "button-link responsive-color-btn", 'data-no-turbolink' => true do %>
    <div class="exhibition btn btn-primary btn-block grid-button responsive-color-btn">
      <div class="center-block-outer">
        <div class="center-block-middle">
          <div class="center-block-inner">
            <h4 class="button-link-name">Visit Exhibition</h4>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <br />
</div>
