<p id="notice"><%= notice %></p>

<div id="main-container" class="container">
  <div class="row">
    <h1 class="title"><%= @exhibition.name %></h1>
    <br />
  </div>
  <div class="row exhibition-info">
    <div class="col-xs-4">
      <div class="picture-frame">
        PICTURE OF EXHIBITION
      </div>
    </div>
    <div class="col-xs-8">
      <p><%= "Start Date: #{@exhibition.start_date} End Date: #{@exhibition.end_date}" %></p>
      <p><%= @exhibition.description %></p>
    </div>
  </div>
  <div class="row">
    <hr />
    <div class="col-xs-6">
      <div class="horizontal-center-wrapper">
        <%=link_to panorama_museum_exhibition_path, :class=> "button-link" do %>
        <div class="entrance btn btn-primary btn-block grid-button">
          <div class="center-block-outer">
            <div class="center-block-middle">
              <div class="center-block-inner">
                <h4 class="button-link-name">Enter Exhibition</h4>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
    <div class="col-xs-6">
      <div class="horizontal-center-wrapper">
        <%=link_to floor_plan_museum_exhibition_path, :class=> "button-link" do %>
          <div class="entrance btn btn-primary btn-block grid-button">
            <div class="center-block-outer">
              <div class="center-block-middle">
                <div class="center-block-inner">
                  <h4 class="button-link-name">Floor Plan</h4>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
