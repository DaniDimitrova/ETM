<p id="notice"><%= notice %></p>

<div id="main-container" class="container">
  <div class="row">
    <a>
      <%= link_to "Museums", museums_path %>
      > <%= link_to @exhibition.museum.name, museum_path(@exhibition.museum_id) %>
      > <%= link_to @exhibition.name, ""%>
    </a>
  </div>
  <div class="row">
    <h1><%= @exhibition.name %></h1>
  </div>
  <div class="row">
    <div class="col-xs-3">
      PLACEHOLDER FOR PICTURES
    </div>
    <div class="col-xs-9">
      <h4>Start Date: <%= @exhibition.start_date %></h4>
      <h4>End Date: <%= @exhibition.end_date %></h4>
      <p><%= @exhibition.description %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6">
      <h3><button type="button">ENTER EXHIBITION</button></h3>
    </div>
    <div class="col-xs-6">
      <h3><button type="button" class="button">FLOOR PLAN</button></h3>
    </div>
  </div>
</div>
