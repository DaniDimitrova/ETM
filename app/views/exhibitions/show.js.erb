$("#slidebox-container").slideUp(300, function(){
  $("#slidebox-container").replaceWith("<%= escape_javascript(render @exhibition) %>");
  $("#slidebox-container").hide().slideDown(300);
  $('html, body').animate({
        scrollTop: $("#slidebox-container").offset().top
    }, 500);
    $('a').on('click', function(){
      $(".loading-container").show();
      $(".loading-container").removeClass('animated fadeOut');
      $(".loading-container").addClass('animated fadeIn');
    });
});
