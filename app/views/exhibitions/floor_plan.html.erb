<p id="notice"><%= notice %></p>
<% content_for :title, (@exhibition.name + " Floor Plan") %>

<div id="main-container" class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1><%= @exhibition.name %></h1>
      <br />
    </div>
  </div>
  <div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6" id="floorPlanContainer">
      <%= image_tag attachment_url(@exhibition, :floor_plan, format: "png"), :usemap => "#Map" %>
        <map name="Map" id="Map">
          <area alt="" title="Mercury" href="http://localhost:3000/museums/33/exhibitions/78/artworks/379/" shape="rect" coords="217,146,224,165" />
          <area alt="" title="Virgin Mary" href="http://localhost:3000/museums/33/exhibitions/78/artworks/3/" shape="rect" coords="429,38,439,69" />
        </map>
    </div>
    <div class="col-lg-3"></div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <br />
      <h4>Click on a red or blue box to visit the coresponding artwork. Click on a camera icon
      to view the corresponding panorama.</h4>
    </div>
  </div>
</div>
