<% content_for :title, @artwork.name %>
<%= javascript_include_tag "application" %>

<div id="main-container" class="container">
  <div class="row">
    <div class="col-xs-12">
      <p id="notice"><%= notice %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-11">
      <h1 class="title"><%= @artwork.name %></h1>
      <h2 class="title in-line">
        By:
        <% @artists.each do |artist| %>
        <%= link_to artist.name, artist_path(artist) %>
        <% end %>
      </h2>
    </div>
    <div class="col-xs-1">
      <% if !session[:user_id].blank? %>
        <%= link_to edit_artwork_path(@artwork), :class => "button-link horizontal-center-wrapper responsive-color-btn" do %>
          <div class="btn btn-primary grid-button horizontal-center responsive-color-btn">
            <span class="glyphicon glyphicon-pencil"></span>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 horizontal-center-wrapper">
      <br />
      <div class="picture-frame">
        <%= image_tag attachment_url(@artwork, :image, format: "png"), :class => "image full-image horizontal-center" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <hr />
      <p><%= @artwork.description %></p>
    </div>
  </div>
<%# TODO: Maybe add a way to see where a piece of artwork has been? %>
</div>
