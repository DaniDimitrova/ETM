  clickNavigate : true
})
$(function() {
  $('#highlight-sculptures').click(function(){
    $('area').mapster('deselect');
    $('.sculpture').mapster('select');
  });

  $('#highlight-paintings').click(function(){
    $('area').mapster('deselect');
    $('.painting').mapster('select');
  });
});

